<div class="body">
		    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
	<div class="container">
		<div class="row">
		  <div class="col-md-6 col-md-offset-3">
				<h2>Editing Book</h2>
				<%=form_for(@book) do |f|%>
				    <% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
			<div class="row">
				<p>Title</p>
				<%= f.text_field :title,class: "col-md-12"%>
			</div>
			<div class="row">
				<p>Opinion</p>
				<%= f.text_field :body,class: "col-md-12" %>
			</div>
			<div class="row">
				<%= f.submit "Update Book",class: "btn btn-primary col-md-12 actions" %>
			</div>
			<% end %>
			<%= link_to "Show",book_path(@book.id) %>
			|
			<%= link_to "Back",books_path %>
		  </div>
		</div>
	</div>
</div>