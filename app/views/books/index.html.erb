<div class="body">
		    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
	<div class="container">
		<div class="row">
			<div class="user-info col-md-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg",size: "100*100"%>
				<table class="table table-striped">
					<tr>
						<td>name</td>
						<td><%= @user.name%></td>
					</tr>
					<tr>
						<td>introduction</td>
						<td><%= @user.introduction%></td>
					</tr>
				</table>
				<div class="row">
						<% if @user.id==current_user.id %>
							<%= link_to edit_user_path(@user.id), class: "btn btn-default col-md-12" do%>
								<span class="glyphicon glyphicon-wrench"></span>
							<% end %>
						<% else %>
						<%= link_to mypage_path(current_user.id),
						class: "btn btn-default col-md-12" do %>
							<span class="glyphicon glyphicon-wrench"></span>
							<% end %>
						<% end %>
				</div>
					<h2>New book</h2>
					<%= form_for(@book) do |f| %>
					    <% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
				<div class="row">
					<p>Title</p>
					<%=f.text_field :title,class: "col-md-12" %>
				</div>
				<div class="row">
					<p>Opinion</p>
					<%=f.text_field :body,class: "col-md-12" %>
				</div>
					<div class="actions row">
					<%= f.submit "Create Book",class: "btn btn-primary col-md-12"%>
				    </div>
					<% end %>
			</div>
			<div class="col-md-9">
				<h2>Books</h2>
				<table class="table table-striped">
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag book.user, :profile_image,fallback: "no_image.jpg", size:"40x40" %></td>
						<td><%= link_to book.title,book_path(book.id) %></td>
						<td><%=book.body%></td>
					</tr>
				<% end %>
				</table>
			</div>
		</div>
	</div>
</div>