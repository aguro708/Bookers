<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h2>Editing Comment</h2>
				<%= form_for [@book,@bookcomment] do |f| %>
				<div class="row">
					<p>comment</p>
					<%= f.text_field :comment,class: "col-md-12" %>
				</div>
				<div class="actions row">
					<%= f.submit "Update Comment",class: "col-md-12 btn btn-primary" %>
				</div>
				<% end %>
				<%= link_to "Show",book_path(@bookcomment.book.id) %>
				|
				<%= link_to "Back",books_path %>
			</div>
		</div>
	</div>
</div>