<div class="body">
	<div class="container">
		<div class="row">
			<div class="user-info col-md-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg",size: "100*100"%>
				<table class="table table-striped">
					<tr>
						<td>name</td>
						<td><%= @user.name%></td>
					</tr>
					<tr>
						<td>introduction</td>
						<td><%= @user.introduction%></td>
					</tr>
				</table>
				<div class="row">
						<% if @user.id==current_user.id %>
							<%= link_to edit_user_path(@user.id), class: "btn btn-default col-md-12" do%>
								<span class="glyphicon glyphicon-wrench"></span>
							<% end %>
						<% else %>
						<%= link_to mypage_path(current_user.id),
						class: "btn btn-default col-md-12" do %>
							<span class="glyphicon glyphicon-wrench"></span>
							<% end %>
						<% end %>
				</div>
					<h2>New book</h2>
					<%= form_for(@book) do |f| %>
				<div class="row">
					<p>Title</p>
					<%=f.text_field :title,class: "col-md-12" %>
				</div>
				<div class="row">
					<p>Opinion</p>
					<%=f.text_field :body,class: "col-md-12" %>
				</div>
					<div class="actions row">
					<%= f.submit "Create Book",class: "btn btn-primary col-md-12"%>
				    </div>
					<% end %>
			</div>
			<div class="col-md-9">
				<h2>Users</h2>
				<table class="table table-striped">
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size:"40x40" %></td>
						<td><%=user.name%></td>
						<td><%= link_to "Show",mypage_path(user.id) %></td>
					</tr>
				<% end %>
				</table>
			</div>
		</div>
	</div>
</div>